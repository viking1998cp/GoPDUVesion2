<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HistoryDetailActivityActivity">
        <LinearLayout
            android:background="@color/colorGreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorBlue"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <ImageView
                        android:id="@+id/imvBack"
                        android:layout_width="@dimen/width0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_navigate_before_black_24dp"/>
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="match_parent"
                        android:text="32543543634"
                        android:textSize="@dimen/fontMedium"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        />
                </LinearLayout>



            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_margin="@dimen/margin4dp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvIdHistory"
                    android:padding="@dimen/padding5dp"
                    android:background="@color/colorGray3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="booking id: jbừuiewbvưei"/>

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/historyMap"
                    tools:context=".activity.HistoryDetailActivityActivity" />

                <LinearLayout
                    android:padding="@dimen/padding5dp"
                    android:layout_marginTop="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:padding="@dimen/padding2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/imvIconMedium"
                        android:src="@drawable/ic_circle_blue"/>

                    <TextView
                        android:id="@+id/tvPickUpName"
                        android:paddingLeft="@dimen/padding20dp"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="match_parent"
                        android:text="12-08-1098-12"
                        android:textColor="@color/colorBlack"
                        android:gravity="left"
                        android:textSize="@dimen/fontMediumSmall"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="@dimen/imvIconSmall"
                        android:layout_weight="1"
                        android:src="@drawable/ic_circle_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/imvIconSmall"
                        android:src="@drawable/ic_circle_gray"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding5dp"

                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:padding="@dimen/padding2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/imvIconMedium"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/tvDestinationName"
                        android:paddingLeft="@dimen/padding20dp"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="match_parent"
                        android:text="12-08-1098-12"
                        android:textColor="@color/colorBlack"
                        android:gravity="left"
                        android:textSize="@dimen/fontMediumSmall"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/padding10dp"
                    android:paddingBottom="@dimen/padding10dp"
                    android:background="@drawable/background_layout_white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    >

                    <TextView
                        android:id="@+id/tv_Price"
                        android:gravity="center"
                        android:layout_width="@dimen/width0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="163.000"
                        android:textSize="@dimen/fontMedium"/>

                    <View
                        android:layout_width="@dimen/lineWidth"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray" />


                    <TextView
                        android:id="@+id/tvDistance"
                        android:gravity="center"
                        android:layout_width="@dimen/width0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:text="16 km"
                        android:textSize="@dimen/fontMedium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/padding15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imvDriverFace"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/imvFace"
                        android:layout_weight="3"
                        android:padding="@dimen/padding10dp" />

                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_driver_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Thắng"
                            android:textSize="@dimen/fontMedium"
                            android:textStyle="bold"
                            android:gravity="left|center_vertical"
                            />

                        <TextView
                            android:id="@+id/tv_driver_phone"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="0389512898"
                            android:textSize="@dimen/fontMedium"
                            android:gravity="left|center_vertical"
                            />
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratting"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:theme="@style/RatingBar"/>


                <Button
                    android:id="@+id/btnSubmit"
                    android:textSize="@dimen/fontMedium"
                    android:background="@drawable/background_button_no_boder_blue"
                    android:layout_marginRight="@dimen/margin8dp"
                    android:layout_marginLeft="@dimen/margin8dp"
                    android:layout_marginTop="@dimen/margin24dp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorWhite"
                    android:text="submit"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

