<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:visibility="gone"
        android:layout_marginBottom="@dimen/menuSize"
        android:layout_gravity="bottom"
        android:id="@+id/cdlPickupme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding20dp"
            android:paddingLeft="@dimen/padding10dp"
            android:paddingRight="@dimen/padding10dp"
            android:background="@color/colorWhite"

            >

            <Button
                android:id="@+id/btnSearchPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_search_gray_24dp"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding10dp"
                android:text="@string/pickupHere"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/fontMediumSmall"
                android:enabled="true"
                android:gravity="left"
                android:textStyle="bold"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textAllCaps="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/padding2dp"
                android:weightSum="10"
                android:layout_marginTop="@dimen/margin16dp"
                android:layout_marginBottom="@dimen/margin10dp">

                <ImageView
                    android:background="@drawable/background_circle"
                    android:padding="@dimen/padding10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pickupme"
                    android:layout_marginRight="@dimen/margin8dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNamePickup"
                        style="@style/textLocation"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:id="@+id/tvNamePickupDetail"
                        style="@style/textLocation"
                        android:layout_marginTop="@dimen/margin8dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_margin="@dimen/margin10dp"
                android:id="@+id/btnAcvite"
                style="@style/button.Login"
                android:background="@drawable/background_button_no_boder"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="@string/Comfirm"
                />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>