<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/fontNormal</item>
    </style>

    <style name="buttonBigsize">
        <item name="android:textSize">@dimen/textBigsize</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">@dimen/buttonHeightMain</item>
    </style>
    <!-- style for toolbar -->
    <style name="ToolBarStyle">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textSize">@dimen/fontMedium</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>


    </style>

    <style name="ToolBarTheme.ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:titleTextColor">@color/colorWhite</item>
    </style>

    <!-- style for button form login -->
    <style name="button.Login"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">@dimen/margin16dp</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_no_boder</item>
        <item name="android:textColor">@color/colorWhite</item>


    </style>



    <style name="navigationBottomStyle">
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="editSearchView">
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="cdlStyleCustomerMap">
        <item name="android:layout_marginBottom">@dimen/menuSize</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>>
    </style>

    <style name="textLocation">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/fontNormal</item>
    </style>

    <style name="textLocationTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginBottom">@dimen/margin8dp</item>
    </style>



    <style name="textInfomationDriver">
        android:id="@+id/tvDestination"
        android:layout_width="@dimen/width0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:textColor="#000000"
        <item name="android:layout_width">@dimen/width0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">6</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/fontSmallBigger</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
