<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/fontNormal</item>
    </style>

    <style name="buttonBigsize">
        <item name="android:textSize">@dimen/textBigsize</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">@dimen/buttonHeightMain</item>
    </style>
    <!-- style for toolbar -->
    <style name="ToolBarStyle">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textSize">@dimen/fontMedium</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>


    </style>

    <style name="ToolBarTheme.ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:titleTextColor">@color/colorWhite</item>
    </style>

    <!-- style for button form login -->
    <style name="button.Login"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">@dimen/margin16dp</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="navigationBottomStyle">
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="editSearchView">
        <item name="android:colorControlNormal">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

</resources>
